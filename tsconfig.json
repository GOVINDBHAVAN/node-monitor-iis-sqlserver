{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true, //restart of VScode is required after this setting
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "lib": ["es2015"],
  "exclude": ["./node_modules/*"],
  "include": ["**/*", "config/**/*.json", "config/**/*.env"]
}
