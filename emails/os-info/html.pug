p Time: #{now}, Alert type: #{notification}, Hostname: #{hostname}, Type: #{type},
p CPU #{cpu.notification}, #{cpu.result} / #{cpu.threshold} threshold
p RAM #{mem.notification}, #{mem.result} / #{mem.threshold} threshold

p Server Details:
table(style='width:100%', border='1')
  tr
    th UserName
    th Uptime
    th OS
    th IP
  tr
    td #{userName}
    td #{JSON.stringify(uptime)}
    td #{operatingSystem}, #{platform}, #{arch}
    td #{ip}
